    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "node",
            "request": "launch",
            "name": "Front-end",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script","dev"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "command": "source ../venv/bin/activate && ./dev.sh",
            "name": "Run backend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/backend",
            "internalConsoleOptions": "neverOpen"
            
        },
        {
            "command": "docker build . --platform linux/amd64 --tag ghcr.io/cow-or-king/open-webui:latest && docker push ghcr.io/cow-or-king/open-webui:latest", 
            "name": "Image_docker",
            "request": "launch",
            "type": "node-terminal",
            "internalConsoleOptions": "neverOpen"

        }
    ]
}